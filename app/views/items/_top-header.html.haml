.header
  .header__inner
    .header__inner__top
      .header__inner__top__logo
        =link_to image_tag("logo.png",width:"140",height:"40"), root_path 
      .header__inner__top__form
        = form_tag(searches_path,method: :get,class: :kensaku) do
          = text_field_tag :search, "",placeholder:"キーワードで探す",class:"form"
          = button_tag type: "submit",class:"musimegane" do
            = image_tag "icon-search 1.png",class:"icon"
          -# = submit_tag '検索', :name => nil
    .header__inner__bar
      .header__inner__bar__search
        .header__inner__bar__search__Category
          = render "items/category"
        .header__inner__bar__search__Brand
          ブランド
      .header__inner__bar__registration
        - if user_signed_in?
          .header__inner__bar__registration__Rogin
          = link_to "ログアウト",destroy_user_session_path, method: :delete,class:"header__inner__bar__registration__link"
          .header__inner__bar__registration__Touroku
            = link_to "マイページ", user_path(current_user),class:"header__inner__bar__registration__link"
        - else
          .header__inner__bar__registration__Rogin
            = link_to "ログイン", user_session_path,class:"header__inner__bar__registration__link"
          .header__inner__bar__registration__Touroku
            = link_to "新規会員登録", new_registration_path(resource_name),class:"header__inner__bar__registration__link"



